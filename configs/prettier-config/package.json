{
  "private": true,
  "name": "@libsync/prettier-config",
  "description": "Prettier configuration for libsync projects",
  "version": "0.0.1",
  "license": "MIT",
  "author": {
    "name": "Marcos Fernandes",
    "url": "https://github.com/rnarcos"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rnarcos/libsync.git",
    "directory": "configs/prettier-config"
  },
  "type": "module",
  "main": "./cjs/index.cjs",
  "module": "./esm/index.js",
  "scripts": {
    "build": "libsync build",
    "clean": "libsync clean",
    "dev": "pnpm dev:package-json --watch",
    "dev:package-json": "libsync dev --",
    "format": "prettier --check \"src/**/*.{js,cjs,json,md}\"",
    "format:fix": "prettier --write \"src/**/*.{js,cjs,json,md}\"",
    "lint": "eslint \"src/**/*.{js,cjs}\"",
    "lint:fix": "eslint \"src/**/*.{js,cjs}\" --fix"
  },
  "peerDependencies": {
    "prettier": "^3.0.0"
  },
  "devDependencies": {
    "@types/prettier": "^3.0.0",
    "eslint": "^9.35.0",
    "prettier": "^3.2.5"
  },
  "exports": {
    "./base": {
      "import": "./esm/base.js",
      "require": "./cjs/base.cjs"
    },
    ".": {
      "import": "./esm/index.js",
      "require": "./cjs/index.cjs"
    },
    "./web": {
      "import": "./esm/web.js",
      "require": "./cjs/web.cjs"
    },
    "./package.json": "./package.json"
  }
}
