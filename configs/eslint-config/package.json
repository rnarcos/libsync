{
  "private": true,
  "name": "@libsync/eslint-config",
  "description": "ESLint configuration for libsync projects",
  "version": "0.0.1",
  "license": "MIT",
  "author": {
    "name": "Marcos Fernandes",
    "url": "https://github.com/rnarcos"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rnarcos/libsync.git",
    "directory": "configs/eslint-config"
  },
  "type": "commonjs",
  "main": "./index.cjs",
  "scripts": {
    "format": "prettier --check \"./*.cjs\" --ignore-path ../../.prettierignore",
    "format:fix": "prettier --write \"./*.cjs\" --ignore-path ../../.prettierignore",
    "lint": "eslint \"./*.cjs\"",
    "lint:fix": "eslint \"./*.cjs\" --fix"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "@typescript-eslint/eslint-plugin": {
      "optional": true
    },
    "@typescript-eslint/parser": {
      "optional": true
    },
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    },
    "eslint-plugin-jsx-a11y": {
      "optional": true
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0"
  },
  "exports": {
    "./base": "./base.cjs",
    ".": "./index.cjs",
    "./node": "./node.cjs",
    "./react": "./react.cjs",
    "./typescript": "./typescript.cjs",
    "./package.json": "./package.json"
  }
}
