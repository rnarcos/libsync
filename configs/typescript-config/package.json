{
  "private": true,
  "name": "@libsync/typescript-config",
  "description": "TypeScript configuration for libsync projects",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rnarcos/libsync.git",
    "directory": "configs/typescript-config"
  },
  "type": "module",
  "main": "./cjs/index.cjs",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "scripts": {
    "build": "libsync build",
    "clean": "libsync clean",
    "dev": "pnpm libsync package-json --mode development --watch",
    "format": "prettier --check \"src/**/*.{js,cjs,json,md}\"",
    "format:fix": "prettier --write \"src/**/*.{js,cjs,json,md}\"",
    "lint": "eslint \"src/**/*.{js,cjs}\"",
    "lint:fix": "eslint \"src/**/*.{js,cjs}\" --fix",
    "publish:staging": "libsync publish:staging --force"
  },
  "devDependencies": {
    "libsync": "workspace:*",
    "typescript": "^5.8.3"
  },
  "exports": {
    ".": {
      "types": "./esm/index.d.ts",
      "import": "./esm/index.js",
      "require": "./cjs/index.cjs"
    },
    "./js": {
      "import": "./esm/js.json",
      "require": "./cjs/js.json"
    },
    "./react": {
      "import": "./esm/react.json",
      "require": "./cjs/react.json"
    },
    "./root": {
      "import": "./esm/root.json",
      "require": "./cjs/root.json"
    },
    "./package.json": "./package.json"
  }
}
