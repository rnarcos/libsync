{
  "private": false,
  "name": "libsync",
  "description": "A CLI tool for library maintainers using tsup - build, develop, and publish with ease",
  "version": "0.0.4",
  "license": "MIT",
  "author": {
    "name": "Marcos Fernandes",
    "url": "https://github.com/rnarcos"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rnarcos/libsync.git",
    "directory": "packages/cli"
  },
  "type": "module",
  "bin": {
    "libsync": "./cjs/cli/index.cjs"
  },
  "main": "./cjs/index.cjs",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "scripts": {
    "build": "node src/cli/index.js build",
    "clean": "node src/cli/index.js clean",
    "dev": "concurrently --names \"dev-package-json,build\" --prefix-colors \"green,gray\" \"node src/cli/index.js dev --watch\" \"node src/cli/index.js build --watch\"",
    "dev:watch": "node src/cli/index.js dev --watch",
    "format": "prettier --check \"src/**/*.{js,ts,json,md}\"",
    "format:fix": "prettier --write \"src/**/*.{js,ts,json,md}\"",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts}\" --fix",
    "publish:staging": "node src/cli/index.js publish:staging --force",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "commander": "^12.0.0",
    "cross-spawn": "^7.0.3",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "minimatch": "^10.1.1",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.0",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "verdaccio": "^6.2.1"
  },
  "peerDependenciesMeta": {
    "verdaccio": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "exports": {
    "./cli": {
      "types": "./esm/cli/index.d.ts",
      "import": "./esm/cli/index.js",
      "require": "./cjs/cli/index.cjs"
    },
    "./config": {
      "types": "./esm/config/index.d.ts",
      "import": "./esm/config/index.js",
      "require": "./cjs/config/index.cjs"
    },
    ".": {
      "types": "./esm/index.d.ts",
      "import": "./esm/index.js",
      "require": "./cjs/index.cjs"
    },
    "./schemas/commands-config": {
      "types": "./esm/schemas/commands-config.d.ts",
      "import": "./esm/schemas/commands-config.js",
      "require": "./cjs/schemas/commands-config.cjs"
    },
    "./schemas": {
      "types": "./esm/schemas/index.d.ts",
      "import": "./esm/schemas/index.js",
      "require": "./cjs/schemas/index.cjs"
    },
    "./utils/config": {
      "types": "./esm/utils/config.d.ts",
      "import": "./esm/utils/config.js",
      "require": "./cjs/utils/config.cjs"
    },
    "./utils/input": {
      "types": "./esm/utils/input.d.ts",
      "import": "./esm/utils/input.js",
      "require": "./cjs/utils/input.cjs"
    },
    "./utils/package": {
      "types": "./esm/utils/package.d.ts",
      "import": "./esm/utils/package.js",
      "require": "./cjs/utils/package.cjs"
    },
    "./utils/patterns": {
      "types": "./esm/utils/patterns.d.ts",
      "import": "./esm/utils/patterns.js",
      "require": "./cjs/utils/patterns.cjs"
    },
    "./utils/validation": {
      "types": "./esm/utils/validation.d.ts",
      "import": "./esm/utils/validation.js",
      "require": "./cjs/utils/validation.cjs"
    },
    "./package.json": "./package.json"
  }
}
