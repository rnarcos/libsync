{
  "private": false,
  "name": "libsync",
  "description": "A CLI tool for library maintainers using tsup - build, develop, and publish with ease",
  "version": "1.0.10",
  "license": "MIT",
  "author": {
    "name": "Marcos Fernandes",
    "url": "https://github.com/rnarcos"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rnarcos/libsync.git",
    "directory": "packages/cli"
  },
  "type": "module",
  "bin": {
    "libsync": "./src/cli/index.js"
  },
  "main": "./src/index.js",
  "module": "./src/index.js",
  "types": "./src/index.js",
  "scripts": {
    "build": "node src/cli/index.js build",
    "clean": "node src/cli/index.js clean",
    "dev": "concurrently --names \"dev-package-json,build\" --prefix-colors \"green,gray\" \"node src/cli/index.js package-json --mode development --watch\" \"node src/cli/index.js build --watch\"",
    "dev:watch": "node src/cli/index.js package-json --watch",
    "format": "prettier --check \"src/**/*.{js,ts,json,md}\"",
    "format:fix": "prettier --write \"src/**/*.{js,ts,json,md}\"",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts}\" --fix",
    "publish:staging": "node src/cli/index.js publish:staging --force",
    "typecheck": "node src/cli/index.js build --types-only"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "commander": "^12.0.0",
    "cross-spawn": "^7.0.3",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "minimatch": "^9.0.5",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.0",
    "verdaccio": "^6.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5",
    "type-fest": "^5.2.0",
    "typescript": "^5.3.3"
  },
  "exports": {
    "./cli": {
      "types": "./src/cli/index.js",
      "import": "./src/cli/index.js",
      "require": "./src/cli/index.js"
    },
    "./config": {
      "types": "./src/config/index.js",
      "import": "./src/config/index.js",
      "require": "./src/config/index.js"
    },
    ".": {
      "types": "./src/index.js",
      "import": "./src/index.js",
      "require": "./src/index.js"
    },
    "./schemas/commands-config": {
      "types": "./src/schemas/commands-config.js",
      "import": "./src/schemas/commands-config.js",
      "require": "./src/schemas/commands-config.js"
    },
    "./schemas": {
      "types": "./src/schemas/index.js",
      "import": "./src/schemas/index.js",
      "require": "./src/schemas/index.js"
    },
    "./utils/config": {
      "types": "./src/utils/config.js",
      "import": "./src/utils/config.js",
      "require": "./src/utils/config.js"
    },
    "./utils/error-logging": {
      "types": "./src/utils/error-logging.js",
      "import": "./src/utils/error-logging.js",
      "require": "./src/utils/error-logging.js"
    },
    "./utils/input": {
      "types": "./src/utils/input.js",
      "import": "./src/utils/input.js",
      "require": "./src/utils/input.js"
    },
    "./utils/package": {
      "types": "./src/utils/package.js",
      "import": "./src/utils/package.js",
      "require": "./src/utils/package.js"
    },
    "./utils/patterns": {
      "types": "./src/utils/patterns.js",
      "import": "./src/utils/patterns.js",
      "require": "./src/utils/patterns.js"
    },
    "./utils/validation": {
      "types": "./src/utils/validation.js",
      "import": "./src/utils/validation.js",
      "require": "./src/utils/validation.js"
    },
    "./package.json": "./package.json"
  }
}
